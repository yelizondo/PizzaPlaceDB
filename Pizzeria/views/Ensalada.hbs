<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Ensalada</div>
        <div class="panel-body">
            <h1>Ajustar Ensalada:</h1>
            <div class="row">
                <div class="col-md-4">
                    <p>Seleccione la ensalada que desea:</p>
                    <form>
                        <select id="table1">
                            {{#each resEnsaladas}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}                            
                        </select>
                    </form>
                    <p>Seleccione el tamaño que desea:</p>
                    <form>
                        <select id="table2">
                            {{#each resTamannosEnsalada}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </form>
                    <p>Adicionar Vinagreta:</p>
                    <form>
                        <select id="table3">
                            <option value="Ninguna" selected>Ninguna</option>
                            {{#each resVinagretas}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </form>                                                                                      
                </div>
                <div class="col-md-4">
                    <p>Selecione los ingredientes que desea:</p>
                    <div class="table-responsive">
                        <table class= "table table-hover table-condensed table-bordered" id="tablePM">
                            <tr>
                                <th>Ingrediente</th>
                                <th>Agregar</th>
                                <th>Extra</th>
                            </tr>
                            {{#each resIngredientes}}
                                <tr> 
                                    <td>{{this}}</td>
                                    <td><input type="checkbox" name="check-tab1"></td>
                                    <td><input type="checkbox" name="check-tab1"></td>
                                </tr>
                            {{/each}}                             
                        </table>
                    </div>                            
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="cantidad">Cantidad de ensaladas:</label>
                        <input type="text" class="form-control" id="cantidad">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" value="">Añadir Pollo</label>
                    </div>                            
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary floatRight">Cancelar</button>
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary floatRight">Añadir al Carrito</button>
                </div> 
            </div>
        </div>
    </div>		
</div>