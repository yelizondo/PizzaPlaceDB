<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">Crear Pizza - Segunda Mitad</div>
        <form method="POST" action="/CrearSegundaMitad/readySecond">
            <div class="panel-body">
                <h1>Crear la primera mitad de la pizza:</h1>
                <div class="row">
                    <div class="col-md-4">
                        <p>Selecione los ingredientes que desea:</p>
                        <div class="table-responsive">
                            <table class= "table table-hover table-condensed table-bordered" id="tablePM">
                                <tr>
                                    <th>Ingrediente</th>
                                    <th>Agregar</th>
                                    <th>Extra</th>
                                </tr>
                                {{#each resIngredientes}}
                                    <tr> 
                                        <td>{{this}}</td>
                                        <td><input type="checkbox" name="ag-{{this}}"></td>
                                        <td><input type="checkbox" name="ex-{{this}}"></td>
                                    </tr>
                                {{/each}}                             
                            </table>
                        </div>                            
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4">
                        <a href="CrearPizzaMain" class="btn btn-primary">
                            Volver
                        </a>
                    </div>
                    <div class="col-md-4">
                        <input type="submit" class="btn btn-primary" name="addToCart" value="Avanzar a la siguiente pizza">
                    </div>
                </div>
            </div>
        </form>
    </div>		
</div>