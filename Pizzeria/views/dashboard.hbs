<div class="container">
  <div class="panel panel-danger">
    <div class="panel-heading">Seleccione lo que desea añadir a la orden</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <div class="row text-center">
            <div class="col-md-4 text-center">
              <a href="CrearPizzaMain" class="btn btn-danger dashboard-btn">
                  Crear Pizza
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 text-center">
                <a href="PizzaEspecialMain" class="btn btn-danger dashboard-btn">
                    Pizza Especial
                </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 text-center">
                <a href="Ensalada" class="btn btn-danger dashboard-btn">
                    Ensalada
                </a>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 text-center">
                <a href="Bebida" class="btn btn-danger dashboard-btn">
                  Bebida
                </a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="table-responsive">
            <table class="table table-hover table-bordered table-condensed">
              <tr>
                <th>Elemento</th>
                <th>Tamaño</th>
                <th>Cantidad</th>
                <th>Detalles</th>
                <th>Extras</th>
                <th>Precio</th>
              </tr>
              {{#each resOrden}}
                  <tr>
                      <td>{{this.elemento}}</td>
                      <td>{{this.tamanno}}</td>
                      <td>{{this.cantidad}}</td>
                      <td>{{this.detalles}}</td>
                      <td>{{this.extras}}</td>
                      <td>₡{{this.precio}}</td>
                  </tr>
              {{/each}}
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-4 text-center">
            <a href="/dashboard/logout" class="btn btn-danger pull-right">
              Salir
            </a>
        </div>
        <div class="col-md-4 text-center">
            <a href="/dashboard/makePurchase" class="btn btn-danger pull-right">
              Realizar Pedido
            </a>
        </div>
        <div class="col-md-4 text-center">
            <p class="precioTotal">Total: ₡{{resTotal}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
