<div class="container">
    <div class="panel panel-danger">
        <div class="panel-heading">Crear Pizza</div>
        <form action="PizzaEspecialMain/iniciarCreacion" method='POST'>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4">
                        <p>Saborizacion de la pasta:</p>
                        <div>
                            <select class="select-css" id="table1" name="saborizaciones">
                                {{#each resSaborizaciones}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p>Selecione el tamaño de la pizza:</p>
                        <div>
                            <select class="select-css"id="table1" name="tamannos">
                                {{#each resTamannos}}
                                    <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div name="radioBox">
                            <p>¿Desea la pizza con dos sabores?</p>
                            <input type="radio" name="chooseone" value="UnSaborEspecial" checked>
                            <label for="UnSabor"> Un Sabor</label><br>
                            <input type="radio" name="chooseone" value="DosSaboresEspecial">
                            <label for="DosSabores"> Dos Sabores</label><br>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-4">
                        <a href="dashboard" class="btn btn-danger">
                            Cancelar
                        </a>
                    </div>
                    <div class="col-md-4">
                        <input type="submit" class="btn btn-danger" name="seguir" value="Seguir">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
