<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">Seleccione lo que desea añadir a la orden</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-4">
          <div class="row">
            <div class="col-md-4"> 
              <a href="CrearPizzaMain" class="btn btn-primary">
                  Crear Pizza
              </a>       
            </div>                  
          </div>
          <div class="row">
            <div class="col-md-4">
                <a href="PizzaEspecialMain" class="btn btn-primary">
                    Pizza Especial
                </a>                           
            </div>                  
          </div>
          <div class="row">
            <div class="col-md-4">
                <a href="Ensalada" class="btn btn-primary">
                    Ensalada
                </a>                           
            </div>                  
          </div>
          <div class="row">
            <div class="col-md-4">
                <a href="Bebida" class="btn btn-primary">
                  Bebida
                </a>                            
            </div>                  
          </div>
        </div>
        <div class="col-md-4">
          <div class="table-responsive">
            <table class="table table-hover table-bordered table-condensed" id="Table">
              <tr>
                <th>Elemento</th>
                <th>Tamaño</th>
                <th>Cantidad</th>
                <th>Detalles</th>
                <th>Extras</th>
                <th>Precio</th>
              </tr>
              {{#each resOrden}}
                  <tr> 
                      <td>{{this.elemento}}</td>
                      <td>{{this.tamanno}}</td>
                      <td>{{this.cantidad}}</td>
                      <td>{{this.detalles}}</td>
                      <td>{{this.extras}}</td>
                      <td>{{this.precio}}</td>
                  </tr>
              {{/each}}                                   
            </table>                  
          </div>
        </div>              
      </div>                                                            
    </div>
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-4">
            <a href="/login/logout" class="btn btn-primary">
              Salir
            </a> 
        </div>
        <div class="col-md-4">
            <a href="Bebida" class="btn btn-primary">
              Realizar Pedido
            </a> 
        </div>
      </div>
    </div>
  </div>    
</div>